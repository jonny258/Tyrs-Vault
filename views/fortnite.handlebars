<!-- Profile Section -->
<div class="profile-section">
  <h2>Profile</h2>
  <p>Username: {{username}}</p>
  <ul>
    {{#each playerStats}}
    <li>{{this.statName}}: {{this.value}}</li>
    {{/each}}
  </ul>
</div>

<!-- Item Shop Section -->
<div class="item-shop-section">
  <h2>Item Shop</h2>
  <ul>
    {{#each itemShop}}
    <li>{{this.itemName}} - {{this.itemPrice}}</li>
    {{/each}}
  </ul>
</div>

<!-- Challenges Section -->
<div class="challenges-section">
  <h2>Challenges</h2>
  <ul>
    {{#each challenges}}
    <li>{{this.challengeName}}</li>
    {{/each}}
  </ul>
</div>
